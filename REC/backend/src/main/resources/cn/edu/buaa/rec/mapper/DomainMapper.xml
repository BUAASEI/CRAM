<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.buaa.rec.dao.DomainMapper">
    <resultMap id="BaseResultMap" type="cn.edu.buaa.rec.model.Domain">
        <result column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="description" jdbcType="LONGVARCHAR" property="description"/>
        <result column="use_state" jdbcType="VARCHAR" property="useState"/>
        <result column="build_time" jdbcType="TIMESTAMP" property="buildTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="creator_id" jdbcType="BIGINT" property="creatorId"/>
        <result column="isApproved" jdbcType="INTEGER" property="isapproved"/>
    </resultMap>

    <!-- 根据id，查找该领域的全部信息 -->
    <select id="selectById" parameterType="Long" resultMap="BaseResultMap">
        SELECT *
        FROM domain
        WHERE NAME = #{id}
        LIMIT 1
    </select>

    <!-- 查找现有记录的最大id -->
    <select id="selectMaxId" resultType="Long">
        SELECT max(id)
        FROM domain
    </select>

    <!-- 根据name，查找该用户的全部信息 -->
    <select id="selectByName" parameterType="String" resultMap="BaseResultMap">
        SELECT *
        FROM domain
        WHERE NAME = #{name,jdbcType=VARCHAR}
        LIMIT 1
    </select>

    <insert id="insert" parameterType="cn.edu.buaa.rec.model.Domain">
        insert into domain (id, name, use_state,
        build_time, update_time, creator_id,
        isApproved, description)
        values (#{id,jdbcType=BIGINT}, #{name,jdbcType=VARCHAR}, #{useState,jdbcType=VARCHAR},
        #{buildTime,jdbcType=TIMESTAMP}, #{updateTime,jdbcType=TIMESTAMP}, #{creatorId,jdbcType=BIGINT},
        #{isapproved,jdbcType=INTEGER}, #{description,jdbcType=LONGVARCHAR})
    </insert>
</mapper>